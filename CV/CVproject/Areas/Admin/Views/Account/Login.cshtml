@model LoginViewModel
@{
    Layout = "_LayoutLogin";
}


<form asp-action="Login" asp-controller="Account" asp-area="Admin">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <c class="icon-field mb-16">
        <span class="icon top-50 translate-middle-y">
            <iconify-icon icon="mage:email"></iconify-icon>
        </span>
        <input asp-for="UserName" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="UserName">
    </c>
    <div class="position-relative mb-20">
        <div class="icon-field">
            <span class="icon top-50 translate-middle-y">
                <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
            </span>
            <input asp-for="Password" class="form-control h-56-px bg-neutral-50 radius-12"  placeholder="Password">
        </div>
        <span class="toggle-password ri-eye-line cursor-pointer position-absolute end-0 top-50 translate-middle-y me-16 text-secondary-light" data-toggle="#Password"></span>
    </div>
    <div class="">
        <div class="d-flex justify-content-between gap-2">
            <div class="form-check style-check d-flex align-items-center">
                <input class="form-check-input border border-neutral-300" type="checkbox" value="" id="remeber">
                <label class="form-check-label" for="remeber">Remember me </label>
            </div>
            <a asp-action="Register" class="text-primary-600 fw-medium">Create new account </a>
            <div class="text-primary-600 fw-medium">
            <a asp-action="ForgotPassword">Forgot Password</a>
        </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32"> Sign In</button>

   
</form>

 